    "react-dom": "18.3.1",
    "react-router": "7.9.2",
    "react-router-dom": "7.9.2",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.6",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
