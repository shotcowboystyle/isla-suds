{
  "name": "isla-suds",
  "private": true,
  "sideEffects": false,
  "version": "2025.7.3",
  "type": "module",
  "scripts": {
    "build": "shopify hydrogen build --codegen",
    "dev": "shopify hydrogen dev --codegen",
    "preview": "shopify hydrogen preview --build",
    "serve:lhci": "shopify hydrogen preview --build",
    "lint": "eslint --no-error-on-unmatched-pattern .",
    "typecheck": "react-router typegen && tsc --noEmit",
    "codegen": "shopify hydrogen codegen && react-router typegen",
    "test": "vitest run",
    "test:smoke": "node scripts/smoke-test-build.mjs && node scripts/smoke-test-typecheck.mjs",
    "test:smoke:build": "node scripts/smoke-test-build.mjs",
    "test:smoke:typecheck": "node scripts/smoke-test-typecheck.mjs",
    "test:smoke:dev": "node scripts/smoke-test-dev-server.mjs",
    "lighthouse:ci": "lhci autorun --collect.staticDistDir=\"dist/server\"",
    "check:bundle-size": "node scripts/check-bundle-size.mjs",
    "test:a11y": "playwright test --project=accessibility",
    "test:e2e": "playwright test tests/e2e",
    "test:e2e:p0": "playwright test tests/e2e --grep \"\\[P0\\]\"",
    "test:e2e:p1": "playwright test tests/e2e --grep \"\\[P0\\]|\\[P1\\]\"",
    "test:perf": "playwright test tests/performance",
    "test:component": "vitest run tests/component"
  },
  "prettier": "@shopify/prettier-config",
  "dependencies": {
